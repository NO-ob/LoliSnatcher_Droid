<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Flutter needs it to communicate with the running application
         to allow setting breakpoints, to provide hot reload, etc.
    -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:name="${applicationName}"
        android:label="LoliSnatcher"
        android:icon="@mipmap/ic_launcher"
        android:requestLegacyExternalStorage="true"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="stateVisible">
            <!-- LAUNCHER intent for debug mode - Flutter needs this to launch the app -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Disable all activity aliases in debug mode to avoid duplicate launcher icons -->
        <activity-alias
            android:name=".MainActivityAlias_LoliSnatcher"
            android:enabled="false"
            tools:node="merge"
            tools:replace="android:enabled"/>
    </application>

</manifest>
